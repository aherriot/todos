{
  "name": "todos",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.2.7",
    "@graphql-tools/graphql-file-loader": "^6.2.6",
    "@graphql-tools/load": "^6.2.5",
    "@graphql-tools/schema": "^7.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.19.4",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/react-router-dom": "^5.1.6",
    "apollo-server-express": "^2.19.0",
    "apollo3-cache-persist": "^0.8.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "graphql.macro": "^1.4.2",
    "immer": "^8.0.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@graphql-codegen/cli": "^1.19.2",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-operations": "^1.17.11",
    "@graphql-codegen/typescript-react-apollo": "^2.2.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.2.2",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6",
    "postcss-cli": "^8.3.0",
    "tailwindcss": "^2.0.1-compat",
    "typescript": "^4.0.5"
  },
  "scripts": {
    "build:style:dev": "postcss src/styles/index.css --watch -o src/styles/generated/tailwind.css --env development",
    "generate:types:dev": "graphql-codegen --watch",
    "start:client": "sleep 3 & react-scripts start",
    "start:server": "NODE_ENV=development nodemon --ignore '*.test.js' --watch server server/index.js",
    "start": "concurrently --kill-others --prefix-colors cyan,green,blue,magenta \"npm:build:style:dev\" \"npm:start:client\" \"npm:start:server\" \"npm:generate:types:dev\"",
    "build:style:prod": "postcss src/styles/index.css -o src/styles/generated/tailwind.css --env production",
    "generate:types:prod": "graphql-codegen",
    "prebuild": "npm run build:style:prod && npm run generate:types:prod",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "proxy": "http://localhost:8000",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
